<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.VerificationActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/animationView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:lottie_rawRes="@raw/verification_failed"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

    <TextView
        android:id="@+id/label_verification"
        android:layout_marginTop="16dp"
        android:layout_below="@id/animationView"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorBlack"
        android:textSize="28sp"
        android:text="Verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:text="An Email Verification link has been sent.\nPlease check your mail."
        android:layout_below="@id/label_verification"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorDarkGrey"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/Verification_button"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        android:text="Verify"
        android:layout_marginHorizontal="56dp"
        android:layout_marginBottom="16dp"
        android:layout_above="@id/Resend_button"
        android:background="@drawable/button_background"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>



    <Button
        android:layout_marginHorizontal="56dp"
        android:id="@+id/Resend_button"
        android:visibility="visible"
        android:text="Resend Verification link"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:paddingHorizontal="16dp"
        android:background="@drawable/button_boundary"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>



</RelativeLayout>