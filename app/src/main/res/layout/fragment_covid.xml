<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/cons_layout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_margin="25dp">

       <TextView
           android:id="@+id/stateName"
           android:layout_width="300dp"
           android:paddingTop="5dp"
           android:paddingLeft="12dp"
           android:paddingBottom="3dp"
           android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
           android:background="#95ED2F"
           android:textColor="@color/colorBlack"
           android:textSize="19sp"
           android:textStyle="bold"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

       <ImageView
           android:layout_width="25dp"
           android:layout_height="wrap_content"
           android:layout_marginEnd="28dp"
           android:background="#95ED2F"
           android:src="@drawable/ic_baseline_arrow_drop_down_24"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

   </androidx.constraintlayout.widget.ConstraintLayout>

    <com.github.mikephil.charting.charts.PieChart
        android:layout_below="@id/cons_layout"
        android:id="@+id/pieChart"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="240dp"/>

    <TextView
        android:layout_below="@id/pieChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/totalCases"
        android:paddingLeft="100dp"
        android:textColor="@color/colorStateName"
        android:textStyle="bold"
        android:textSize="19sp"/>

    <TextView
        android:id="@+id/ana_label"
        android:layout_below="@id/totalCases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textStyle="bold"
        android:textSize="21sp"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"
        android:layout_marginLeft="39dp"
        android:textColor="#1A3AF1"
        android:text="@string/analysis_line"/>


    <ListView
        android:layout_below="@id/ana_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <RelativeLayout
        android:id="@+id/loading_screen"
        android:clickable="true"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:elevation="8dp"
            android:padding="16dp"
            android:background="@drawable/textfield_backgrouond"
            android:layout_centerInParent="true"
            android:layout_width="150dp"
            android:layout_height="150dp">


            <com.github.ybq.android.spinkit.SpinKitView
                android:layout_centerInParent="true"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/spin_kit"
                style="@style/SpinKitView.Large.FoldingCube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:SpinKit_Color="@color/colorAccent" />

            <TextView
                android:textSize="12sp"
                android:id="@+id/loading_text"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorBlack"
                android:text="Loading..."
                android:layout_centerHorizontal="true"
                android:layout_below="@id/spin_kit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </RelativeLayout>



    </RelativeLayout>


</RelativeLayout>