<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/textfield_backgrouond"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp"
    android:elevation="8dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/hospital_blayout"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/hospital_name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="hospital name "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/hospital_address"
            android:text="Head Post Office Phagwara,Punjab,14440"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/hospital_phone"
                android:textSize="18sp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="bottom"
                android:text="6585585858"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_bed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/hospital_Beds"
                android:textSize="18sp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="bottom"
                android:text="15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_below="@id/hospital_blayout"
        android:id="@+id/hospital_next"
        android:layout_alignParentEnd="true"
        android:paddingVertical="4dp"
        android:paddingHorizontal="26dp"
        android:background="@drawable/layout_next"
        android:src="@drawable/ic_arrow_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</RelativeLayout>