<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/textfield_backgrouond">

    <TextView
        android:textStyle="bold"
        android:maxLines="3"
        android:id="@+id/news_title"
        android:textSize="18sp"
        android:text="default title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/news_author"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:text="-author name"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/news_desc"
        android:gravity="center_horizontal"
        android:text="description description description description description description"
        android:layout_below="@id/news_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/news_next"
        android:src="@drawable/ic_arrow_forward"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/news_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</RelativeLayout>